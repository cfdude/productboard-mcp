{
  "name": "productboard-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Productboard REST API",
  "type": "module",
  "bin": {
    "productboard-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "dev": "npm run build && npm run inspector",
    "generate-manifest": "tsx scripts/generate-manifest.ts",
    "generate-tools": "tsx scripts/generate-tools.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "productboard",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT"
}

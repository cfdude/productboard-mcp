{
  "name": "@the_cfdude/productboard-mcp",
  "version": "1.2.2",
  "description": "Model Context Protocol server for Productboard REST API with dynamic tool loading",
  "type": "module",
  "bin": {
    "productboard-server": "./build/index.js"
  },
  "files": [
    "build",
    "generated",
    "scripts",
    "smithery.json",
    "manifest.json",
    "claude-connector.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "dev": "npm run build && npm run inspector",
    "generate-manifest": "tsx scripts/generate-manifest.ts",
    "generate-tools": "tsx scripts/generate-tools.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit --strict",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.ts\" \"*.json\" \"*.md\"",
    "lint-and-format": "npm run lint && npm run format",
    "pre-commit": "npm run lint-and-format && npm run test && npm run generate-manifest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "productboard",
    "model-context-protocol",
    "api",
    "dynamic-loading",
    "product-management",
    "customer-feedback"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfdude/productboard-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/cfdude/productboard-mcp/issues"
  },
  "homepage": "https://github.com/cfdude/productboard-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Productboard MCP Contributors",
  "license": "MIT"
}
